Linux
	rm -rf MinimalistPlatformer.linux.*
	./linux-build.py
	tar -zcvf MinimalistPlatformer.linux.tar.gz MinimalistPlatformer.linux

Mac
	cd MinimalistPlatformer
	./mac-build.py
	tar -zcvf MinimalistPlatformer.app MinimalistPlatformer.mac.tgz

Windows
	double click windows-build.py
	rename dist MinimalistPlatformer.windows
	zip up MinimalistPlatformer.windows MinimalistPlatformer.windows.zip

